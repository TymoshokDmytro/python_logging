{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "[%(asctime)s][%(levelname)s][%(name)s][%(module)s]: %(message)s"
    }
  },
  "handlers": {
    "console": {
      "level": "INFO",
      "formatter": "standard",
      "class": "logging.StreamHandler"
    },
    "time_rotating"
  },
  "loggers": {
    "default": {
      "handlers": [
        "console"
      ],
      "level": "DEBUG",
      "propagate": false
    }
  },
  "user_defined": {
    "time_rotating": {
      "class": "TimedRotatingFileHandler",
      "filename": "logs/log",
      "when": "M",
      "interval": 1,
      "backupCount": 0,
      "encoding": "utf-8",
      "delay": true
    }
  }
}